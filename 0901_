int8_t p=5; 1 byte.

"函數庫
#include <inttypes.h>


array2_2_int 應用 
LED流水燈
int s1=0,s2=2,s3=4,s4=5,s5=12;

改成
int s[]={0,2,4,5,12}
int i;
for(i=0;i<sizeof(s)/sizeof(int);i++)
{
	pinMode(s[i],OUTPUT); //輪流點亮燈腳 
} 
int j;
for(j=0;j<5;j++)
{
	digitalWrite(s[j],HIGH);
	delay(1000);
	digitalWrite(s[j],LOW);
}



跑馬燈
七段指示燈 